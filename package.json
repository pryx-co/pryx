{
  "name": "pryx",
  "version": "0.1.0",
  "description": "Sovereign AI agent with local-first control center",
  "private": true,
  "scripts": {
    "dev": "make build && echo 'Use specific component dev commands: cd apps/host && cargo tauri dev, cd apps/tui && bun run build'",
    "build": "make build",
    "test": "make test",
    "lint": "make lint",
    "format": "make format",
    "clean": "make clean",
    "check": "make check",
    "install": "make install",
    "version:bump": "make version-bump-patch",
    "version:tag": "make version-tag",
    "info": "make info",
    "start:tui": "make start-tui",
    "start:runtime": "make start-runtime",
    "start:host": "make start-host",
    "start:all": "make start-all",
    "logs": "make logs",
    "logs:tui": "make logs-tui",
    "logs:runtime": "make logs-runtime",
    "logs:host": "make logs-host",
    "tail:tui": "cd apps/tui && bun run dev",
    "tail:runtime": "cd apps/runtime && go run ./cmd/pryx-core",
    "tail:host": "cd apps/host && cargo tauri dev",
    "tail:all": "concurrently 'npm run tail:tui' 'npm run tail:runtime' 'npm run tail:host'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/pryx.git"
  },
  "keywords": [
    "ai",
    "agent",
    "local-first",
    "sovereign",
    "rust",
    "go",
    "tauri",
    "react",
    "typescript",
    "cloudflare-workers"
  ],
  "author": "Pryx Team",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "bun": "1.3.7",
    "rust": ">=1.70.0",
    "go": ">=1.22.0"
  },
  "devDependencies": {
    "oxlint": "latest",
    "@commitlint/cli": "^19.7.1",
    "husky": "^9.1.7"
  }
}
