{
  "name": "@pryx/vault",
  "version": "0.1.0",
  "description": "Pryx Vault - Secure credential encryption with Argon2id + AES-256-GCM",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "lint": "oxlint src",
    "format": "prettier --write src tests",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "argon2": "^0.41.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "^5.7.0",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "vault",
    "encryption",
    "argon2",
    "aes-gcm",
    "security",
    "credentials"
  ],
  "license": "MIT"
}
