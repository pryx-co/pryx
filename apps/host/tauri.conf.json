{
    "productName": "Pryx",
    "version": "1.0.0",
    "identifier": "com.pryx.app",
    "build": {
        "beforeDevCommand": "cd ../local-web && bun run dev",
        "beforeBuildCommand": "cd ../local-web && bun run build",
        "devUrl": "http://localhost:42424",
        "frontendDist": "../local-web/dist"
    },
    "app": {
        "windows": [
            {
                "title": "Pryx",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "plugins": {
        "deep-link": {
            "schemes": [
                "pryx"
            ]
        },
        "updater": {
            "endpoints": [
                "http://localhost:4321/api/update/manifest?platform={{target}}&arch={{arch}}"
            ],
            "pubkey": "dW5zZWxlY3RlZAo="
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.png"
        ],
        "publisher": "Pryx",
        "category": "DeveloperTool",
        "longDescription": "Pryx is an AI-powered coding assistant that runs locally on your machine."
    }
}